{
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 100,
  "useTabs": false,
  "overrides": [
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "proseWrap": "never",
        "htmlWhitespaceSensitivity": "ignore"
      }
    }
  ]
}
